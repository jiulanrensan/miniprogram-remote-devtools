{
  "compilerOptions": {
    "target": "ES2015",
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop":true,
    "strict": true,
    "lib": ["esnext"],
    "experimentalDecorators": true,
    "isolatedModules":true,
    "baseUrl": ".",
  },
  "exclude": ["node_modules", "example","**/*.test.ts", "dist"]
}